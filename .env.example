# E2B & Docker MCP Hackathon - Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# E2B Sandbox Configuration
# ========================================
# Get your API key from: https://e2b.dev/docs
E2B_API_KEY=your_e2b_api_key_here

# ========================================
# MCP Server Credentials
# ========================================

# GitHub MCP
# Get token from: https://github.com/settings/tokens
# Required scopes: repo, workflow
GITHUB_TOKEN=your_github_personal_access_token_here

# Exa MCP (for web research)
# Get API key from: https://exa.ai
EXA_API_KEY=your_exa_api_key_here

# Perplexity MCP (optional, for fact-checking)
# Get API key from: https://perplexity.ai
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ========================================
# Cloud Configuration
# ========================================

# Number of agents to spawn in E2B sandbox
CLOUD_NUM_AGENTS=4

# E2B sandbox timeout (in seconds)
CLOUD_SANDBOX_TIMEOUT=7200

# Dashboard port for monitoring
DASHBOARD_PORT=8080

# ========================================
# Development Configuration
# ========================================

# Set to 'true' to enable debug logging
DEBUG=false

# Set to 'true' to use local Docker instead of E2B (for testing)
USE_LOCAL_DOCKER=false
